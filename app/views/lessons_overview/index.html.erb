<table class= "form">
    <%= form_tag(controller: "lessons_overview", action: "index") do %>
    <tr>
        <td>名前: </td>
        <td><%= text_field_tag ("mail") %></td>
    </tr>
    <tr>
        <td>メッセージ</td>
        <td><%= text_area_tag ("msg". ' ', size: "100x40") %></td>
    </tr>
    <tr>
        <td></td>
        <td><%= submit_tag ("Click") %></td>
    </tr>
<% end %>
</table>

<table class="lessons">
    <tr>
        <th style="width:50%">メッセージ</th>
        <th>名前</th>
        <th>メール</th>
        <th>投稿日時</th>
    </tr>
    <% @lessons_data.each do |key, obj| %>
    <tr>
        <td class="msg"><%= obj ['msg'] %></td>
        <td class="name"><%= obj ['name'] %></td>
        <td class="mail"><%= obj ['mail'] %></td>
        <td class="time"><%= Time.at(key.to_i) %></td>
    </tr>
    </tr>
<% end %>
</table>